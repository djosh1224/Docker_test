# Use CentOS as the base image
FROM centos:8

# Install basic dependencies (for example, curl)
RUN yum -y update && \
    yum -y install curl && \
    yum clean all

# Set the working directory inside the container
WORKDIR /app

# Copy a simple file (e.g., a script) into the container
COPY hello.sh /app/

# Set the command to run the script
CMD ["bash", "hello.sh"]
